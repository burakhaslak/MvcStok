@section Styles {
    <style>
        .bg-gradient-primary {
            background: linear-gradient(45deg, #007bff, #6610f2);
        }

        .modal-content {
            border-radius: 12px;
        }

        .modal-body p {
            font-size: 1.6rem;
            line-height: 1.6;
        }
    </style>
}

<button type="button" class="btn btn-lg btn-outline-info" data-toggle="modal" data-target="#Modal1">
    <i class="fas fa-info-circle"></i> Daha Fazla
</button>


<div class="modal fade" id="Modal1" tabindex="-1" role="dialog" aria-labelledby="Modal1Label" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content shadow-lg border-0">

            
            <div class="modal-header bg-gradient-primary text-white">
                <h2 class="modal-title font-weight-bold" id="Modal1Label">
                    <i class="fas fa-project-diagram"></i> Proje Hakkında
                </h2>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

       
            <div class="modal-body p-4">
                <p class="lead text-dark">
                    📌 <strong>Bu Proje</strong>, <em>Murat Yücedağ</em> önderliğinde
                    <span class="text-primary">29.11.2025</span> tarihinde
                    <strong>Burak Haşlak</strong> tarafından tamamlanmıştır.
                </p>
                <hr>
                <ul class="list-unstyled">
                    <li>✅ ASP.NET MVC mimarisi kullanıldı</li>
                    <li>✅ Bootstrap ile modern arayüz tasarlandı</li>
                    <li>✅ Entity Framework ile veritabanı işlemleri yapıldı</li>
                </ul>
            </div>


            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-success">
                    <i class="fas fa-thumbs-up"></i> Beğendim
                </button>
            </div>
        </div>
    </div>
</div>
